{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="min-h-screen flex items-center justify-center bg-gray-100">
    <div class="w-full max-w-md bg-white p-8 rounded-lg shadow-lg">
        <h1 class="text-2xl font-semibold text-center text-orange-600 mb-6">Register</h1>

        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm) }}
        
        <div class="mb-4">
            {{ form_label(registrationForm.username, null, {'label_attr': {'class': 'block text-gray-700 font-semibold mb-2'}}) }}
            {{ form_widget(registrationForm.username, {'attr': {'class': 'w-full border border-gray-300 rounded-md p-3 focus:outline-none focus:ring-2 focus:ring-orange-500'}}) }}
            {{ form_errors(registrationForm.username) }}
        </div>

        <div class="mb-4">
            {{ form_label(registrationForm.plainPassword, 'Password', {'label_attr': {'class': 'block text-gray-700 font-semibold mb-2'}}) }}
            {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'w-full border border-gray-300 rounded-md p-3 focus:outline-none focus:ring-2 focus:ring-orange-500'}}) }}
            {{ form_errors(registrationForm.plainPassword) }}
        </div>

        <div class="mb-4 flex items-center">
            {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'mr-2'}}) }}
            <label for="{{ registrationForm.agreeTerms.vars.id }}" class="text-gray-600">I agree to the terms</label>
        </div>

        <button type="submit" class="w-full bg-orange-600 text-white py-3 rounded-md hover:bg-orange-500 focus:outline-none focus:ring-2 focus:ring-orange-500 transition">
            Register
        </button>

        {{ form_end(registrationForm) }}

        <div class="mt-6 text-center">
            <p class="text-gray-600">Already have an account? <a href="{{ path('app_login') }}" class="text-orange-600 hover:underline">Login</a></p>
        </div>
    </div>
</div>
{% endblock %}